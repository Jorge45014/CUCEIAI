<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CUCEIAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Status Bar (barra superior) -->
        <item name="colorPrimaryDark">@color/black</item>

        <!-- Color de acento (para botones, checkboxes, etc.) -->
        <item name="colorAccent">@color/black</item>

        <!-- Otros colores del tema -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSurface">@color/surface</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.CUCEIIA2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CUCEIIA2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CUCEIAI" parent="Base.Theme.CUCEIAI" />

    <!-- Estilo personalizado para AlertDialog -->
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorAccent">#4CAF50</item>
    </style>

    <style name="PositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#4CAF50</item> <!-- Verde -->
    </style>

    <style name="NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#F44336</item> <!-- Rojo -->
    </style>
</resources>